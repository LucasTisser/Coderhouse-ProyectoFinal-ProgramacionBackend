<div class="container my-5">
  <div class="row bg-light col-5 offset-4">
    <h1 class="text-center">Register</h1>
    <br />
    <form class="form" action="/api/usuarios/signup" method="POST" role="form">

      <div class="">
        <div class="mt-4 offset-1 col-10 form-group">
          <input
            id="email"
            name="email"
            placeholder="email"
            class="form-control mb-4"
            type="text"
            required
          />
        </div>
        <div class="mt-4 offset-1 col-10 form-group">
          <input
            id="password"
            name="password"
            placeholder="password"
            class="form-control mb-4"
            type="text"
            required
          />
        </div>
        <div class="mt-4 offset-1 col-10 form-group">
          <input
            id="username"
            name="username"
            placeholder="username"
            class="form-control mb-4"
            type="text"
            required
          />
        </div>
        <div class="mt-4 offset-1 col-10 form-group">
          <input
            id="direccion"
            name="direccion"
            placeholder="direccion"
            class="form-control mb-4"
            type="text"
            required
          />
        </div>
        <div class="mt-4 offset-1 col-10 form-group">
          <input
            id="edad"
            name="edad"
            placeholder="edad"
            class="form-control mb-4"
            type="text"
            required
          />
        </div>
        <div class="mt-4 offset-1 col-10 form-group">
          <input
            id="foto"
            name="foto"
            placeholder="foto"
            class="form-control mb-4"
            type="text"
            required
          />
        </div>
        <div class="mt-4 offset-1 col-10 form-group">
          <input
            id="numeroTelefono"
            name="numeroTelefono"
            placeholder="numeroTelefono"
            class="form-control mb-4"
            type="text"
            required
          />
        </div>
        <div class="form-group col-4 offset-1">
          <input class="btn btn-success" type="submit" value="Register" />
        </div>

      </div>
    </form>
    <div class="col-4 offset-1">
      <button
        class="btn btn-success my-3"
        onclick="location.href = '/api/usuarios/login'"
      >Ir a Login</button>
    </div>
  </div>
</div>